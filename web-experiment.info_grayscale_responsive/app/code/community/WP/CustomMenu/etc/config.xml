<?xml version="1.0"?>
<config>
    <modules>
        <WP_CustomMenu>
            <version>3.1.0</version>
        </WP_CustomMenu>
    </modules>
    <frontend>
        <routers>
            <custommenu>
                <use>standard</use>
                <args>
                    <frontName>custommenu</frontName>
                    <module>WP_CustomMenu</module>
                </args>
            </custommenu>
        </routers>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <custommenu>
                        <type>singleton</type>
                        <model>custommenu/observer</model>
                        <method>observeLayoutHandleInitialization</method>
                    </custommenu>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <layout>
            <updates>
                <custommenu>
                    <file>webandpeople/custommenu.xml</file>
                </custommenu>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <custom_menu translate="title" module="custommenu">
                                            <title><![CDATA[Web & People: Custom Menu]]></title>
                                            <sort_order>2000</sort_order>
                                        </custom_menu>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <blocks>
            <catalog>
                <rewrite>
                    <navigation>WP_CustomMenu_Block_Navigation</navigation><!-- v1.4-1.6 -->
                </rewrite>
            </catalog>
            <page>
                <rewrite>
                    <html_topmenu>WP_CustomMenu_Block_Topmenu</html_topmenu><!-- v1.7 -->
                </rewrite>
            </page>
            <custommenu>
                <class>WP_CustomMenu_Block</class>
            </custommenu>
        </blocks>
        <helpers>
            <custommenu>
                <class>WP_CustomMenu_Helper</class>
            </custommenu>
        </helpers>
        <models>
            <custommenu>
                <class>WP_CustomMenu_Model</class>
            </custommenu>
        </models>
    </global>
    <default>
        <custom_menu>
            <general>
                <enabled>1</enabled>
                <position>top</position>
                <ajax_load_content>0</ajax_load_content>
                <max_level>3</max_level>
                <sibebar_draw_max_level>0</sibebar_draw_max_level>
                <show_home_link>1</show_home_link>
                <display_empty_categories>1</display_empty_categories>
                <non_breaking_space>0</non_breaking_space>
                <rtl>0</rtl>
                <mobile_menu>1</mobile_menu>
                <version>3.1.0</version>
            </general>
            <columns>
                <count>3</count>
                <divided_horizontally>0</divided_horizontally>
                <integrate>1</integrate>
            </columns>
            <popup>
                <delay_displaying>100</delay_displaying>
                <delay_hiding>100</delay_hiding>
                <width>0</width>
                <top_offset>0</top_offset>
                <sb_popup_type>relative</sb_popup_type>
                <sb_width>0</sb_width>
                <sb_height>0</sb_height>
                <sb_bottom_offset>0</sb_bottom_offset>
            </popup>
        </custom_menu>
    </default>
</config>
